<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical" >
    <EditText
        android:id="@+id/firstname"
        android:layout_width="@dimen/textview_height"
        android:layout_height="@dimen/activity_height_margin"
        android:hint="@string/txtfirstname_hint"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="@dimen/textview_height"
        android:layout_height="@dimen/activity_height_margin"
        android:hint="@string/txtlastname_hint"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="@dimen/textview_height"
        android:layout_height="@dimen/activity_height_margin"
        android:hint="@string/txtemail_hint"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/phonenumber"
        android:layout_width="@dimen/textview_height"
        android:layout_height="@dimen/activity_height_margin"
        android:hint="@string/txtphonenumber_hint"
        android:inputType="phone"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="@dimen/textview_height"
        android:layout_height="@dimen/activity_height_margin"
        android:hint="Password"
        android:inputType="numberPassword"
        />

    <Button
        android:id="@+id/signup"
        android:layout_width="@dimen/button_length"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="right"
        android:text="Create Account"
        android:background="@color/colorAccent"
        />
</LinearLayout>